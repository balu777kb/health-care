pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/balu777kb/health-care.git', branch: "master"
            }
        }
        stage('Build') {
            steps {
                sh "mvn clean package"
            }
        }
        stage('Build Image') {
            steps {
                sh 'docker build -t medicureimg .'
                sh 'docker tag medicureimg:latest myimage/medicureimgaddbook:latest'
            }
        }

        stage('Docker login and push') {
          steps {
             withCredentials([usernamePassword(credentialsId: 'dockerhub-pwd', passwordVariable: 'dckr_pat_2RXX5Ua4CP_kG7h6S7LEcw9D1X8', usernameVariable: 'USER')]) {
                 sh "echo $PASS | docker login -u balu777kb --password-stdin"
                 sh 'docker push balu777kb/myimg:v1'

             sh 'docker push myimage/medicureimgaddbook:latest'
                }
            }
        }
        stage('Deploy') {
            steps {
                    sh 'docker run -itd --name medicure -p 80:8082 myimage/medicureimgaddbook:latest'
                }
            }
    }
        post {
            success {
                echo 'Pipeline successfully executed!'
            }
            failure {
                echo 'Pipeline failed!'
            }
        }
}
