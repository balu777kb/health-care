pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                git url: 'https://github.com/balu777kb/health-care.git', branch: "master"
            }
        }
        stage('Build') {
            steps {
                sh "mvn clean package"
            }
        }
        stage('Build Image') {
            steps {
                sh 'docker build -t medicureimg .'
                sh 'docker tag medicureimg:latest myimage/medicureimgaddbook:latest'
            }
        }

        stage('Docker login and push') {
            steps {
             sh'DOCKER_USERNAME=balu777kb'
             sh'DOCKER_PASSWORD=9705979634'
             sh'echo 9705979634@kB | docker login --username balu777kb
            sh 'docker push myimage/medicureimgaddbook:latest'
                }
            }
        }
        stage('Deploy') {
            steps {
                    sh 'docker run -itd --name medicure -p 80:8082 myimage/medicureimgaddbook:latest'
                }
            }
    }
        post {
            success {
                echo 'Pipeline successfully executed!'
            }
            failure {
                echo 'Pipeline failed!'
            }
        }
}
